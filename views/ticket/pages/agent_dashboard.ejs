<%- include('../partials/header', { title: 'Agent Dashboard' }); %>

<div class="page-container">
    <h1>Welcome to the Agent Dashboard, <%= user.username %>!</h1>

    <div class="dashboard-stats">
        <div class="stat-item">
            <h3>Open Tickets</h3>
            <p><%= ticketStats.open %> tickets are currently open.</p>
        </div>
        <div class="stat-item">
            <h3>Closed Tickets</h3>
            <p><%= ticketStats.closed %> tickets are closed.</p>
        </div>
    </div>

    <a href="/ticket/list" class="btn btn-primary">View All Tickets</a>
</div>

<%- include('../partials/footer'); %>
