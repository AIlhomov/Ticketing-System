<%- include('../partials/header', { title: 'Welcome to the Support Ticket System' }); %>

<div class="container">
    <div class="jumbotron mt-4 text-center">
        <h1 class="display-4">Welcome to the Support Ticket System</h1>
        <p class="lead">This platform allows you to create and manage support tickets efficiently. Please log in to get started, or sign up for an account if you're new!</p>
        <hr class="my-4">
        
        <% if (!user) { %>
            <!-- Show login and register buttons to non-logged-in users -->
            <a class="btn btn-primary btn-lg" href="/login" role="button">Login</a>
            <a class="btn btn-secondary btn-lg" href="/register" role="button">Register</a>
        <% } else { %>
            <!-- If already logged in, show dashboard and create ticket options -->
            <a class="btn btn-primary btn-lg" href="/dashboard" role="button">Go to Dashboard</a>
            <a class="btn btn-secondary btn-lg" href="/ticket/new" role="button">Create New Ticket</a>
        <% } %>
    </div>
    
    <div class="row mt-5 text-center">
        <div class="col-md-4">
            <i class="fa fa-ticket-alt fa-3x"></i>
            <h3>Create Tickets</h3>
            <p>Submit support requests and track their progress with ease.</p>
        </div>
        <div class="col-md-4">
            <i class="fa fa-comments fa-3x"></i>
            <h3>Real-Time Updates</h3>
            <p>Receive updates via email and stay informed about your ticket's progress.</p>
        </div>
        <div class="col-md-4">
            <i class="fa fa-users fa-3x"></i>
            <h3>Manage Tickets</h3>
            <p>Admins can manage, categorize, and resolve tickets efficiently.</p>
        </div>
    </div>
</div>

<%- include('../partials/footer'); %>
