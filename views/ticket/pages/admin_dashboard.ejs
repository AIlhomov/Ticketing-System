<%- include('../partials/header', { title: 'Admin Dashboard' }); %>

<div class="container">
    <h1>Welcome to the Admin Dashboard, <%= user.username || user.email %>!</h1>
    
    <h2>All Tickets</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Department</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% tickets.forEach(ticket => { %>
            <tr>
                <td><%= ticket.id %></td>
                <td><%= ticket.title %></td>
                <td><%= ticket.description %></td>
                <td><%= ticket.department %></td>
                <td><%= ticket.status %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer'); %>
