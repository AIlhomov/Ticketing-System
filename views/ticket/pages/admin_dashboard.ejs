<%- include('../partials/header', { title: 'Admin Dashboard' }); %>

<div class="container">
    <h1>Welcome to the Admin Dashboard, <%= user.username || user.email %>!</h1>
    
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Open Tickets</h5>
                    <p class="card-text"><%= stats.openTickets %> tickets are currently open.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Closed Tickets</h5>
                    <p class="card-text"><%= stats.closedTickets %> tickets are closed.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">In Progress Tickets</h5>
                    <p class="card-text"><%= stats.inProgressTickets %> tickets are in progress.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer'); %>
