<%- include('../partials/header', { title: 'Create New Article' }); %>

<div class="container">
    <h1 class="text-center my-4">Create New Article</h1>

    <form action="/knowledge_base/articles/create" method="POST">
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="content">Content:</label>
            <textarea id="content" name="content" class="form-control" rows="6" required></textarea>
        </div>

        <div class="form-group">
            <label for="category">Category:</label>
            <select id="category" name="category" class="form-control" required>
                <% categories.forEach(category => { %>
                    <option value="<%= category.name %>"><%= category.name %></option>
                <% }) %>
            </select>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Create Article</button>
    </form>
</div>

<%- include('../partials/footer'); %>
