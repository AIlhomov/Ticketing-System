<%- include('../partials/header', { title: 'Knowledge Base' }); %>

<div class="container article-container">
    <h1 class="text-center my-4">Knowledge Base</h1>

    <ul class="list-unstyled">
        <% articles.forEach(article => { %>
            <li>
                <h3><%= article.title %></h3>
                <div class="article-preview">
                    <p>
                        <%= article.content.length > 200 ? article.content.substring(0, 200) : article.content %>
                        <% if (article.content.length > 200) { %>
                            ...
                        <% } %>
                    </p>
                </div>
                <p>Created on: <%= new Date(article.created_at).toString() %></p>
                <a href="/knowledge_base/articles/<%= article.id %>" class="btn btn-primary">READ MORE</a>
                <hr>
            </li>
        <% }); %>
    </ul>

    <a href="/" class="btn btn-secondary">Back to Home</a>
</div>

<%- include('../partials/footer'); %>
