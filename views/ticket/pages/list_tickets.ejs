<%- include('../partials/header', { title: 'List of tickets' }); %>

<div class="page-container">
    <h1>List of Tickets</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Department</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% tickets.forEach(ticket => { %>
                <tr>
                    <td><%= ticket.id %></td>
                    <td><%= ticket.title %></td>
                    <td><%= ticket.description %></td>
                    <td><%= ticket.department %></td>
                    <td><%= ticket.status %></td>
                    <td>
                        <a href="/ticket/view/<%= ticket.id %>" class="btn btn-info btn-sm">View</a>
                        <a href="/ticket/close/<%= ticket.id %>" class="btn btn-warning btn-sm">Close</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer') %>