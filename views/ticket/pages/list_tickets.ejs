<%- include('../partials/header', { title: 'List of tickets' }); %>
<div class="page-container">
    <h1>List of Tickets</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th><a href="?sort=id&order=<%= sort === 'id' && order === 'asc' ? 'desc' : 'asc' %>">ID</a></th>
                <th><a href="?sort=title&order=<%= sort === 'title' && order === 'asc' ? 'desc' : 'asc' %>">Title</a></th>
                <th>Description</th>
                <th><a href="?sort=department&order=<%= sort === 'department' && order === 'asc' ? 'desc' : 'asc' %>">Department</a></th>
                <th><a href="?sort=status&order=<%= sort === 'status' && order === 'asc' ? 'desc' : 'asc' %>">Status</a></th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% tickets.forEach(ticket => { %>
                <tr>
                    <td><%= ticket.id %></td>
                    <td><%= ticket.title %></td>
                    <td><%= ticket.description %></td>
                    <td><%= ticket.department %></td>
                    <td><%= ticket.status %></td>
                    <td>
                        <a href="/ticket/view/<%= ticket.id %>" class="btn btn-info btn-sm">View</a>
                        <a href="/ticket/close/<%= ticket.id %>" class="btn btn-warning btn-sm">Close</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer'); %>

