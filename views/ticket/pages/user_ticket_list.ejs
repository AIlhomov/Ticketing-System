<%- include('../partials/header', { title: 'My Tickets' }); %>

<div class="container">
    <h1 class="text-center my-4">My Tickets</h1>

    <% if (tickets.length === 0) { %>
        <p>You haven't created any tickets yet.</p>
    <% } else { %>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        <a href="?sort=id&order=<%= sort === 'id' && order === 'asc' ? 'desc' : 'asc' %>">
                            ID <%= sort === 'id' ? (order === 'asc' ? '↑' : '↓') : '' %>
                        </a>
                    </th>
                    <th>
                        <a href="?sort=title&order=<%= sort === 'title' && order === 'asc' ? 'desc' : 'asc' %>">
                            Title <%= sort === 'title' ? (order === 'asc' ? '↑' : '↓') : '' %>
                        </a>
                    </th>
                    <th>Description</th>
                    <th>
                        <a href="?sort=category_name&order=<%= sort === 'category_name' && order === 'asc' ? 'desc' : 'asc' %>">
                            Category <%= sort === 'category_name' ? (order === 'asc' ? '↑' : '↓') : '' %>
                        </a>
                    </th>
                    <th>
                        <a href="?sort=status&order=<%= sort === 'status' && order === 'asc' ? 'desc' : 'asc' %>">
                            Status <%= sort === 'status' ? (order === 'asc' ? '↑' : '↓') : '' %>
                        </a>
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% tickets.forEach(ticket => { %>
                <tr>
                    <td><%= ticket.id %></td>
                    <td><%= ticket.title %></td>
                    <td class="description-column"><%= ticket.description %></td>
                    <td><%= ticket.category_name %></td>
                    <td><%= ticket.status %></td>
                    <td>
                        <a href="/ticket/view/<%= ticket.id %>" class="btn btn-info btn-sm">View</a>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    <% } %>

    <a href="/dashboard" class="btn btn-secondary mt-4">Back to Dashboard</a>
</div>

<%- include('../partials/footer'); %>
